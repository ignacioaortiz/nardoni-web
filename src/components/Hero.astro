<section id="inicio" class="relative text-white py-32 md:py-44 overflow-hidden">
  <!-- Imagen de fondo -->
  <div class="absolute inset-0">
    <img
      src="/foto-0.jpeg"
      alt=""
      class="w-full h-full object-cover"
    />
    <!-- Overlay más sutil -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/40 to-black/30"></div>
  </div>

  <!-- Contenido -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 [text-shadow:_0_4px_12px_rgb(0_0_0_/_70%)]">
      Mecánica General
    </h1>
    <p class="text-xl md:text-2xl mb-8 text-white [text-shadow:_0_2px_8px_rgb(0_0_0_/_60%)]">
      ¡Soluciones Integrales para la Reparación de tu Vehículo!
    </p>

    <p class="text-lg text-white italic [text-shadow:_0_2px_8px_rgb(0_0_0_/_60%)] mb-10">
      "¡Comprometidos con hacer el trabajo de forma correcta!"
    </p>

    <a
      href="#contacto"
      class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-white px-8 py-4 rounded-lg font-semibold transition-colors shadow-lg text-lg"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
      </svg>
      Contactanos
    </a>
  </div>
</section>
